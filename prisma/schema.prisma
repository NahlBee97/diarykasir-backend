generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  CASHIER
}

enum OrderStatus {
  COMPLETED
  VOID
}

model users {
  id        Int      @id @default(autoincrement())
  name      String
  pin       String   @unique 
  role      Role     @default(CASHIER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  orders    orders[]
  cart     carts[]
}

model products {
  id             Int      @id @default(autoincrement())
  name           String
  category       String   
  price          Int   
  stock          Int      @default(0) 
  sale           Int      @default(0)
  image          String?  
  isActive       Boolean  @default(true) 
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  orderItems     orderItems[]
  cartItems      cartItems[]
}

model carts {
  id        Int      @id @default(autoincrement())
  userId   Int
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user      users    @relation(fields: [userId], references: [id])
  items     cartItems[]
}

model cartItems {
  id        Int      @id @default(autoincrement())
  cartId   Int
  productId Int
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  cart      carts    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product   products @relation(fields: [productId], references: [id])
}

model orders {
  id            Int         @id @default(autoincrement())
  userId        Int
  totalAmount   Int     
  paymentCash   Int     
  paymentChange Int     
  status        OrderStatus @default(COMPLETED)
  createdAt     DateTime    @default(now())

  // Relations
  user         users      @relation(fields: [userId], references: [id])
  items         orderItems[]
}

model orderItems {
  id        Int     @id @default(autoincrement())
  quantity  Int
  unitPrice Int 
  
  // Relations
  orderId   Int
  order     orders   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  productId Int
  product   products @relation(fields: [productId], references: [id])
}